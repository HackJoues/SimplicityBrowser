<?xml version="1.0" encoding="utf-8"?>



<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/md_blue_500</item>
        <item name="android:actionBarSize">53dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/md_grey_700</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/md_grey_800</item>
        <item name="android:textColorSecondary">@color/md_grey_800</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>